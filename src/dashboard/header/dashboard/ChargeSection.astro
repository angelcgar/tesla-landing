---
import Section from "../components/Section.astro";
---

<Section
  title="Model Y"
  subTitle="Después de ahorros en combustible"
  color="black"
  priceModel="Desde $679,000²"
>
  <header class="">
    <p class="text-black text-base underline">
      Después de ahorros en combustible
    </p>
  </header>
  <div slot="footer">
    <a
      class="bg-gray-600 border-[3px] border-gray-600 rounded font-medium px-12 py-2 inline-block text-white hover:bg-black hover:border-gray-50 transition-colors"
      href="#"
    >
      Explorar inventario
    </a>
    <a
      class="bg-white rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center"
      href="#"
    >
      Pedido personalizado
    </a>
  </div>
  <img
    slot="background"
    src="/model-y.avif"
    alt="Model Y"
    class="h-full w-full object-cover object-center"
  />
</Section>
